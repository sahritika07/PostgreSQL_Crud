generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  products  Product[]
}


model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())

  products  Product[]
}


model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float
  createdAt   DateTime @default(now())

  userId     Int
  categoryId Int

  user       User     @relation(fields: [userId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])
}

enum Role {
  USER
  ADMIN
}
